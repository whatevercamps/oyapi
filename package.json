{
  "name": "oyapi",
  "version": "0.4.8",
  "description": "OyaMist for Raspberry Pi 3",
  "main": "index.js",
  "directories": {
    "test": "test",
    "dist": "dist",
    "src": "src"
  },
  "dependencies": {
    "oya-vue": "^0.7.2",
    "rimraf": "^2.6.2",
    "rpio": "^0.9.18"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-latest": "^6.0.0",
    "concurrently": "^3.2.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.28.0",
    "mocha": "^3.2.0",
    "should": "^11.2.0",
    "supertest": "^3.0.0",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.2.0"
  },
  "scripts": {
    "build": "bash scripts/build",
    "build:vue": "npm run build:vue-dev ",
    "build:vue-dev": "cross-env NODE_ENV=production webpack --config cfg/webpack.dev.js --progress --hide-modules",
    "clean": "rm -f *.log*; rimraf dist; rimraf .motion",
    "dev": "concurrently \"scripts/server.js test \" \"npm run dev:vue\"",
    "dev:debug": "concurrently \"scripts/server.js --log-debug test aloha\" \"npm run dev:vue\"",
    "dev:vue": "cross-env NODE_ENV=development webpack-dev-server --config cfg/webpack.dev.js --hot",
    "start": "scripts/server.js oyapi",
    "test": "npm run test:verbose",
    "test:test": "mocha -w -R min --inline-diffs -g TEST",
    "test:verbose": "mocha --inline-diffs",
    "test:watch": "mocha -w --inline-diffs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oyamist/oyapi.git"
  },
  "bin": {},
  "keywords": [
    "OyaMist",
    "Raspberry Pi 3",
    "Aeroponics",
    "RestBundle",
    "nodejs",
    "express",
    "firepick",
    "webcam",
    "vue",
    "vuetify"
  ],
  "author": "Karl Lew",
  "license": "MIT",
  "bugs": {
    "url": "git+https://github.com/oyamist/oyapi.git"
  },
  "homepage": "git+https://github.com/oyamist/oyapi.git"
}
